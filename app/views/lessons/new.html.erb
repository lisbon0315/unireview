<div class="lessons-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">講義</h1>
        <%= form_for @lesson do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :professor_name, class: "text-white" %>
            <%= f.text_field :professor_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :department, class: "text-white" %>
            <%= f.text_field :department, class: "form-control" %>
          </div>

          <%= link_to new_lesson_path(university_id: university.id) do %>
            <div class="btn btn-primary">投稿</div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
