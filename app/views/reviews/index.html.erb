<div class="lessons-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <%= link_to 'レビューを追加', new_review_path, class: 'btn btn-block btn-black' %>
      </div>
      <h3 class="lesson-name col-md-offset-8 col-md-4">
        <%= lesson.name %>
        <%= lesson.professor_name %>
        <%= lesson.department %>
      </h3>
    </div>
    <% @reviews.each do |review| %>
      <div class="review-index-single">
        <div class="row">
          <div class="col-md-3 col-md-offset-4">
            <div class="star">
              <%= review.star %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-3">
            <p class="content">
              <%= review.content %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @lessons %>
  </div>
</div>
